pragma solidity ^0.8.28;

contract MathOperations {
    
    function adder(uint _a, uint _b) public pure returns (uint sum, bool error) {
        unchecked {
            uint result = _a + _b;
            if (result >= _a) {
                return (result, false);
            } else {
                return (0, true);
            }
        }
    }

    function subtractor(uint _a, uint _b) public pure returns (uint difference, bool error) {
        unchecked {
            if (_a >= _b) {
                return (_a - _b, false);
            } else {
                return (0, true);
            }
        }
    }
}
